# ============================================
# Cortex DFS Lineup Optimizer - Environment Configuration Template
# ============================================
# Copy this file to .env and update with your actual values
# The .env file is git-ignored to keep secrets safe

# ------------------------------------------
# Database Configuration
# ------------------------------------------
# PostgreSQL connection string
# Format: postgresql://username:password@hostname:port/database_name
# Local development (with Docker Compose):
DATABASE_URL=postgresql://cortex:cortex@localhost:5432/cortex

# Cloud deployment (Railway/Render example):
# DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@postgres.railway.internal:5432/railway

# ------------------------------------------
# Backend API Configuration
# ------------------------------------------
# Secret key for JWT token signing (used in Phase 3 for authentication)
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate-a-secure-random-key-here

# Debug mode (enables detailed error messages, hot reload)
# Set to False in production for security
DEBUG=False

# API host and port (for uvicorn server)
API_HOST=0.0.0.0
API_PORT=8000

# ------------------------------------------
# Frontend Configuration
# ------------------------------------------
# Backend API URL (used by Vite frontend during development)
# Note: Vite requires VITE_ prefix for environment variables
VITE_API_URL=http://localhost:8000

# ------------------------------------------
# NFL Data & Schedule Configuration
# ------------------------------------------
# Timezone for NFL schedule (Eastern Time)
NFL_TIMEZONE=America/New_York

# Current NFL season (update annually)
CURRENT_NFL_SEASON=2024

# ------------------------------------------
# File Upload Configuration
# ------------------------------------------
# Maximum file size for XLSX uploads (in MB)
MAX_UPLOAD_SIZE_MB=10

# ------------------------------------------
# Optimization Settings
# ------------------------------------------
# Maximum time for lineup optimization (seconds)
OPTIMIZATION_TIMEOUT_SECONDS=60

# Number of lineups to generate per optimization run
DEFAULT_LINEUP_COUNT=10

# ------------------------------------------
# Logging Configuration
# ------------------------------------------
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ------------------------------------------
# CORS Configuration (for frontend-backend communication)
# ------------------------------------------
# Allowed origins for CORS (comma-separated)
# Use * for development, specify domains for production
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ------------------------------------------
# Testing Configuration
# ------------------------------------------
# Test database URL (SQLite in-memory for fast tests)
TEST_DATABASE_URL=sqlite:///:memory:
